<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:padding="10dp"
    android:background="@drawable/background_item_product" >

    <ImageView
        android:id="@+id/imageProductOfType"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/nameProductOfType"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TÊN LINH KIỆN"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProductOfType"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/priceSaleProductOfType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.000.000"
        android:layout_marginTop="5dp"
        android:textColor="@color/orange"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProductOfType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/unitPriceSaleProductOfType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VNĐ"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="2dp"
        android:textColor="@color/orange"
        android:textSize="10.5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceSaleProductOfType"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/nameProductOfType"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/unitPriceProductOfType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VNĐ"
        android:textSize="10.5sp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceProductOfType"
        app:layout_constraintTop_toBottomOf="@+id/nameProductOfType"
        app:layout_constraintVertical_bias="0" />


    <TextView
        android:id="@+id/priceProductOfType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.000.000"
        android:textSize="10sp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/unitPriceSaleProductOfType"
        app:layout_constraintTop_toBottomOf="@+id/nameProductOfType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0" />

</androidx.constraintlayout.widget.ConstraintLayout>
