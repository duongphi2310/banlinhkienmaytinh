<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corner"
    android:padding="1dp">
    <ImageView
        android:id="@+id/hinhanhlinhkien"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp" />
    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/loailinhkien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#ee4d2d"
            android:gravity="center_vertical"
            android:paddingEnd="8dp"
            android:text="Loại linh kiện:"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tenlinhkien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/loailinhkien"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:textColor="#005FAA"
            android:layout_marginEnd="0dp"
            android:paddingEnd="8dp"
            android:text="Tên linh kiện:"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/malinhkien"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:textColor="#15C11C"
            android:paddingEnd="8dp"
            android:textSize="15dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/chiTietButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/malinhkien"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/info"
            android:text="" />
    </RelativeLayout>
</LinearLayout>
